@model IEnumerable<FinalProject.Models.Buys>

@{
    ViewBag.Title = "Index";
}

@if (User.Identity.Name.Equals("admin@gmail.com"))
{

<h2>Buys</h2>

	using (Html.BeginForm())
	{
		<p>
			<b>Filter :</b><br />
