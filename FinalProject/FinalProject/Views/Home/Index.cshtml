<section class="products">

	
	@foreach (var item in Model.Product)
	{
		<!-- It's likely you'll need to link the card somewhere. You could add a button in the info, link the titles, or even wrap the entire card in an <a href="..."> -->

		<div class="product-card">
			<div class="product-image">
				<img src="@Html.DisplayFor(modelItem => item.Image)" width="200" height="150">
			</div>
			<div class="product-info">
				<h5>@Html.DisplayFor(model => item.ProductName)</h5>
				<h3>@Html.DisplayFor(model => item.Price)</h3>
				<h1> @Html.DisplayFor(model => item.Description)</h1>
				@Html.DisplayFor(model => item.Brand),
				@Html.DisplayFor(model => item.Inches),
				@Html.DisplayFor(model => item.Resolution),
				@Html.DisplayFor(model => item.RefreshRate),
				@Html.DisplayFor(model => item.Discount)

			</div>
		</div>
	}
