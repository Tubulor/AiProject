<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/Content/IstoreCSS.css" type="text/css" media="screen" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Istore</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @*<div id="player">
            <audio autoplay hidden>
                <source src="~/Content/audio/littleidea.mp3">
            </audio>
        </div> *@
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

    @*<script type="text/javascript" src="~/Content/javascript/"></script>*@
    <style>
        #map {
            height: 100px;
            width: 50%;
            position: absolute;
        }
        #fb-share-button {
            position: absolute;
        }
    </style>
</head>
<body>
    <div id="fb-root"></div>
    <script>
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.10";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="home">@Html.ActionLink("Home page", "Index", "Home")</li>
                    <li class="manage">@Html.ActionLink("Manage", "Index", "Manage")</li>
                    <li class="buys"> @Html.ActionLink("Buy", "Index", "Buys")</li>
                    <li class="products">@Html.ActionLink("Products", "Index", "Products")</li>
                    <li class="statistics">@Html.ActionLink("Statistics", "statistics", "Buys")</li>
                    <li>
                        <a href="#">
                            <div id="transDemo2">
                                <div class="hover">
                                    <img src=http://www.ashlylorenzana.com/wp-content/uploads/2013/12/12065637851779660844SRD_RSS_Logo.svg_.hi_.png width="22" height="22">
                                </div>
                            </div>
                        </a>
                    </li>
                    <li class="subscribe"><a href="#">Subscribe via. RSS</a></li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <section id="intro">
        <!-- Introduction -->
        <img src="~/Content/images/electronicbanner.jpg" />
    </section>
    <link rel="stylesheet" href="~/Content/IstoreCSS.css" type="text/css" media="screen" />
    <article id="mainContent">
        <section>
            @RenderBody()
        </section>
    </article>
    <div id="content">
        <aside>
            <section>
                <header>
                    <h3>Categories</h3>
                </header>
                <ul>
                    <li><a href="#">Lorem ipsum dolor</a></li>
                    <li><a href="#">Sit amet consectetur</a></li>
                    <li><a href="#">Adipisicing elit sed</a></li>
                </ul>
            </section>
            <section>
                <header>
                    <h3>Archives</h3>
                </header>
                <ul>
                    <li><a href="#">December 2008</a></li>
                    <li><a href="#">January 2009</a></li>
                    <li><a href="#">February 2009</a></li>
                    <li><a href="#">March 2009</a></li>
                </ul>
            </section>
        </aside>
    </div>
    <div id="mainContent">
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            
            <div id="content">
                <!-- Footer -->
                <section id="apis">
                    <div class="facebook&googlemaps">
                        <!--Facebook Share Button-->
                        <div class="fb-share-button" data-href="https://developers.facebook.com/docs/plugins/" data-layout="button_count" data-size="large" data-mobile-iframe="true"><a class="fb-xfbml-parse-ignore" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&amp;src=sdkpreparse">Share on FB</a></div>
                        <!--Google Map-->
                        <h3>Google Maps Demo</h3>
                        <div id="map"></div>
                        <script>
                            function initMap() {
                                var uluru = { lat: -25.363, lng: 131.044 };
                                var map = new google.maps.Map(document.getElementById('map'), {
                                    zoom: 4,
                                    center: uluru
                                });
                                var marker = new google.maps.Marker({
                                    position: uluru,
                                    map: map
                                });
                            }
                        </script>
                        <script async defer
                                src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAp4Dy86exFzK18bAlSuX50mTliFahUINU&callback=initMap">
                        </script>
                    </div>
                </section>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
